<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/css/**/*.min.css" asp-href-exclude="**/*-reboot*,**/*-grid*" />
    <link rel="stylesheet" asp-href-include="/lib/fontawesome/css/*.css" />
    <title>@ViewBag.Title</title>
</head>
<body>
    <div class="m-1 p-1">
        <div class="bg-info p-2">
            <h4>@ViewBag.Title</h4>
        </div>
        <div class="bg-info p-2">
            <a class="btn btn-primary" asp-action="Logout" asp-controller="Account">Log Out</a>
        </div>
        @if(TempData["message"] !=null)
        {
            <div class="alert alert-success">@TempData["message"]</div>
        }
        @RenderBody()
    </div>
</body>
</html>
